<h1>CRUD DE ARCHIVOS</h1>

{{#if error}}
  <div class="alert alert-danger">
    {{error}}
  </div>
{{/if}}

{{#if success}}
  <div class="alert alert-success">
    {{success}}
  </div>
{{/if}}

<div class="container">
  <div class="row  m-auto">
    <!-- Crear -->
    <div class="col-12 col-sm-3 p-5">
      <h3>Crear un archivo</h3>
      <form action="/archivos/crear" method="POST">
        <div class="form-group">
          Nombre del archivo
          <input name="archivo" class="form-control" id="archivo" />
        </div>
        <div class="form-group">
          Contenido
          <textarea
            name="contenido"
            class="form-control"
            id="contenido"
            cols="30"
            rows="10"
          ></textarea>
        </div>

        <button type="submit" class="btn btn-primary my-3">Crear archivo</button>
      </form>
    </div>
    <!-- Leer -->
    <div class="col-12 col-sm-3 contaienr p-5">
      <h3>Leer un archivo</h3>
      <form action="/archivos/leer" method="GET">
        <div class="form-group">
          Nombre del archivo
          <input name="archivo" class="form-control" id="archivo" />
        </div>

        <button type="submit" class="btn btn-info my-3">Consultar archivo</button>
      </form>
    </div>
    <!-- Renombrar -->
    <div class="col-12 col-sm-3 contaienr p-5">
      <h3>Renombrar un archivo</h3>
      <form action="/archivos/renombrar" method="POST">
        <div class="form-group">
          Nombre del archivo
          <input name="archivo" class="form-control" id="archivo" />
        </div>
        <div class="form-group">
          Nuevo nombre del archivo
          <input name="nuevoNombre" class="form-control" id="archivo" />
        </div>

        <button type="submit" class="btn btn-warning my-3">Renombrar archivo</button>
      </form>
    </div>
    <!-- Eliminar -->
    <div class="col-12 col-sm-3 contaienr p-5">
      <h3>Eliminar un archivo</h3>
      <form action="/archivos/eliminar" method="POST">
        <div class="form-group">
          Nombre del archivo
          <input name="archivo" class="form-control" id="archivo" />
        </div>

        <button type="submit" class="btn btn-danger my-3">Eliminar archivo</button>
      </form>
    </div>
  </div>
</div>